<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>{% block title %}{% endblock %}</title>

    {% block css %}
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
        <link rel="stylesheet" href="{{ asset.path('/css/app.css', false, true) }}">
    {% endblock %}
</head>
<body class="{% block bodyClass %}bg-light{% endblock %}">

<nav class="navbar navbar-expand-lg border-bottom mb-4 bg-white">
    <div class="container-fluid">
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item">
                    <a class="nav-link {% if route.startsFrom('homepage_app') %}active{% endif %}" href="{{ route.make('homepage_app') }}">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link {% if route.startsFrom('item_add') %}active{% endif %}" href="{{ route.make('item_add') }}">Add new</a>
                </li>
            </ul>
            <form class="d-flex" role="search">
                <input class="form-control" type="search" placeholder="Search..." aria-label="Search">
            </form>
        </div>
    </div>
</nav>

<div class="container-fluid">
    <div class="row g-3">
        <div class="col-12 col-lg-3">
            {% include 'component/menu.html.twig' %}
        </div>
        <div class="col-12 col-lg-9">
            <div class="bg-white border rounded-3 h-100 p-3">
                {% block body %}{% endblock %}
            </div>
        </div>
    </div>
</div>

<div class="container-fluid">
    <footer class="d-flex flex-wrap justify-content-between align-items-center py-3 my-4 border-top">
        <p class="col-md-6 mb-0 text-body-secondary">Â© {{ 'now'|date('Y') }} WatchNext</p>

        <a href="{{ route.make('homepage_index') }}" class="col-md-6 d-flex align-items-center justify-content-end mb-3 mb-md-0 me-md-auto link-body-emphasis text-decoration-none">
            <i class="fa-brands fa-watchman-monitoring"></i>
        </a>
    </footer>
</div>

{% block js %}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    <script src="{{ asset.path('/js/app.js', false, true) }}"></script>
{% endblock %}

</body>
</html>