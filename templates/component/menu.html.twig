<div class="list-group">
    {% for _catalog in catalogMenu.get() %}
        <a href="{{ route.make('catalog_show', {'catalog': _catalog.id}) }}"
           class="list-group-item list-group-item-action {% if catalog is defined and catalog.id == _catalog.id %}active{% endif %}">
                {{ _catalog.name }}

                {% if _catalog.owner == security.userId %}
                    <i class="fa-solid fa-user text-warning float-end ms-1"></i>
                {% else %}
                    <i class="fa-solid fa-users text-warning float-end ms-1"></i>
                {% endif %}

                {% if catalogMenu.isDefault(_catalog) %}
                    <i class="fa-solid fa-star text-warning float-end"></i>
                {% else %}
                    <i class="fa-regular fa-star text-warning float-end"></i>
                {% endif %}
        </a>
    {% endfor %}
        <a href="{{ route.make('catalog_manage') }}" class="list-group-item list-group-item-action {% if route.startsFrom('catalog_manage') %}active{% endif %}">
                <i class="fa-solid fa-pencil"></i> {{ t.trans('menu.manage') }}
        </a>
</div>
