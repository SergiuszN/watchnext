{% extends 'app.html.twig' %}

{% block body %}
    {% include 'component/flash.html.twig' %}

    <form action="" method="post">
        {% include 'component/csfr_token.html.twig' %}

        <div class="mb-3">
            <label for="name" class="form-label">{{ t.trans('catalog.add.form.name') }}</label>
            {% for flash in flash.getAllByLabel('error.name') %}
                <p style="color: red">{{ flash.message }}</p>
            {% endfor %}
            <input type="text" class="form-control" required name="name" id="name">
        </div>
        <div class="mb-3">
            <div class="form-check">
                <input class="form-check-input" type="checkbox" value="" id="default" name="default" />
                <label class="form-check-label" for="default">{{ t.trans('catalog.add.form.default') }}</label>
            </div>
        </div>
        <div class="mb-3">
            <button type="submit" class="btn btn-primary">{{ t.trans('catalog.add.form.create') }}</button>
        </div>
    </form>
{% endblock %}