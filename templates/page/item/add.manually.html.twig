{% extends 'app.html.twig' %}

{% block body %}
    <ul class="nav nav-underline mb-4">
        <li class="nav-item">
            <a class="nav-link" aria-current="page" href="{{ route.make('item_add') }}">{{ t.trans('item.add.nav.fromUrl') }}</a>
        </li>
        <li class="nav-item">
            <a class="nav-link active" aria-current="page" href="{{ route.make('item_add_manually') }}">{{ t.trans('item.add.nav.manually') }}</a>
        </li>
    </ul>

    <h1>{{ t.trans('item.add.header') }}</h1>

    {% include 'component/flash.html.twig' %}

    <form action="" method="post">
        {% include 'component/csfr_token.html.twig' %}
        <div class="mb-3">
            <label for="title" class="form-label">{{ t.trans('item.add.form.title') }}</label>
            <input type="text" class="form-control" required name="title" id="title">
        </div>
        <div class="mb-3">
            <label for="url" class="form-label">{{ t.trans('item.add.form.url') }}</label>
            <input type="url" class="form-control" required name="url" id="url" value="{{ flash.get('item.add.last.url') }}">
        </div>
        <div class="mb-3">
            <label for="description" class="form-label">{{ t.trans('item.add.form.description') }}</label>
            <textarea class="form-control" name="description" id="description"></textarea>
        </div>
        <div class="mb-3">
            <label for="image" class="form-label">{{ t.trans('item.add.form.image') }}</label>
            <input type="url" class="form-control" required name="image" id="image">
        </div>
        <div class="mb-3">
            <label for="catalog" class="form-label">{{ t.trans('item.add.form.catalog') }}</label>
            <select name="catalog" id="catalog" class="form-control" required>
                {% for catalog in catalogs %}
                    <option value="{{ catalog.id }}">{{ catalog.name }}</option>
                {% endfor %}
            </select>
        </div>
        <div class="mb-3">
            <button type="submit" class="btn btn-primary">{{ t.trans('item.add.form.submit') }}</button>
        </div>
    </form>
{% endblock %}